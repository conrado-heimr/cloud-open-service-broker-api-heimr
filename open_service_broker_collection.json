		{
			"name": "Cloud Professional Services",
			"item": [
				{
					"name": "Get Cloud Catalog",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "X-Broker-Api-Version",
								"value": "2.12",
								"type": "text",
								"description": "Versão da API do Open Service Broker."
							}
						],
						"url": {
							"raw": "{{base_url}}/cloud-professional-services/v2/catalog",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"cloud-professional-services",
								"v2",
								"catalog"
							]
						},
						"description": "Obtém o catálogo de serviços Cloud Professional Services do IBM Global Catalog."
					},
					"response": []
				},
				{
					"name": "Provision Cloud Service Instance",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "X-Broker-Api-Version",
								"value": "2.12",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"service_id\": \"{{GC_OBJECT_ID_CLOUD}}\",\n    \"plan_id\": \"<SEU_PLAN_ID_CLOUD_AQUI>\",\n    \"organization_guid\": \"<SEU_ORG_GUID_AQUI>\",\n    \"space_guid\": \"<SEU_SPACE_GUID_AQUI>\",\n    \"parameters\": {\n        \"example_param\": \"example_value\"\n    },\n    \"accepts_incomplete\": true\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/cloud-professional-services/v2/service_instances/<INSTANCE_ID>",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"cloud-professional-services",
								"v2",
								"service_instances",
								"<INSTANCE_ID>"
							]
						},
						"description": "Provisiona uma nova instância de serviço Cloud Professional Services."
					},
					"response": []
				},
				{
					"name": "Update Cloud Service Instance",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "X-Broker-Api-Version",
								"value": "2.12",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"service_id\": \"{{GC_OBJECT_ID_CLOUD}}\",\n    \"plan_id\": \"<NOVO_PLAN_ID_CLOUD_AQUI>\",\n    \"parameters\": {\n        \"another_param\": \"another_value\"\n    },\n    \"accepts_incomplete\": true\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/cloud-professional-services/v2/service_instances/<INSTANCE_ID>",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"cloud-professional-services",
								"v2",
								"service_instances",
								"<INSTANCE_ID>"
							]
						},
						"description": "Atualiza uma instância de serviço Cloud Professional Services existente."
					},
					"response": []
				},
				{
					"name": "Deprovision Cloud Service Instance",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "X-Broker-Api-Version",
								"value": "2.12",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/cloud-professional-services/v2/service_instances/<INSTANCE_ID>?service_id={{GC_OBJECT_ID_CLOUD}}&plan_id=<SEU_PLAN_ID_CLOUD_AQUI>&accepts_incomplete=true",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"cloud-professional-services",
								"v2",
								"service_instances",
								"<INSTANCE_ID>"
							],
							"query": [
								{
									"key": "service_id",
									"value": "{{GC_OBJECT_ID_CLOUD}}"
								},
								{
									"key": "plan_id",
									"value": "<SEU_PLAN_ID_CLOUD_AQUI>"
								},
								{
									"key": "accepts_incomplete",
									"value": "true"
								}
							]
						},
						"description": "Desprovisiona (deleta) uma instância de serviço Cloud Professional Services."
					},
					"response": []
				}
			]
		},
